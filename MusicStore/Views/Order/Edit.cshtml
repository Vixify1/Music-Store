@model MusicStore.Model.Entities.Order

@{
    ViewData["Title"] = "Edit Order";
}

<div class="hero">
    <div class="container-glass">
        <h4 class="page-title">Edit Order</h4>

        <form asp-action="Edit" class="mt-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderId" />
            <input type="hidden" asp-for="CustomerId" />

            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control"
                    asp-items="Html.GetEnumSelectList<MusicStore.Model.Entities.OrderStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CreatedAt" class="control-label"></label>
                <input asp-for="CreatedAt" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="UpdatedAt" class="control-label"></label>
                <input asp-for="UpdatedAt" class="form-control" readonly />
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-admin">
                    <i class="bi bi-save"></i> Save Changes
                </button>
                <a asp-action="OrderManagement" class="btn btn-secondary ms-2">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
