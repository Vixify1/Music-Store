@model MusicStore.Model.Entities.Reviews
@{
    ViewData["Title"] = "Delete Review";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm bg-dark text-white">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Are you sure you want to delete this review?</h3>
                </div>
                <div class="card-body">
                    <p class="text-light">This action cannot be undone. Please confirm that you want to delete the review for the album <strong>@Model.Album.Title</strong>.</p>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ReviewId" />

                        <div class="d-flex justify-content-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-light me-2">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash-fill me-1"></i>Confirm Deletion
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
