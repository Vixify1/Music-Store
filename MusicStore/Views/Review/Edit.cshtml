@model MusicStore.Model.Entities.Reviews
@{
    ViewData["Title"] = "Edit Review";
}

<h2>Edit Review</h2>

<form asp-action="Edit" method="post">
    <div class="form-horizontal">
        <input type="hidden" asp-for="ReviewId" />
        <input type="hidden" asp-for="CustomerId" />
        <input type="hidden" asp-for="CreatedAt" />

        <div class="form-group">
            <label asp-for="AlbumId" class="control-label"></label>
            <select asp-for="AlbumId" class="form-control" asp-items="ViewBag.Albums"></select>
            <span asp-validation-for="AlbumId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rating" class="control-label"></label>
            <input asp-for="Rating" class="form-control" min="1" max="5" type="number" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Comment" class="control-label"></label>
            <textarea asp-for="Comment" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
