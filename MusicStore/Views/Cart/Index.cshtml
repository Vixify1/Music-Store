@model MusicStore.Models.CartViewModel

<div class="container py-5">
    <h1 class="mb-4 text-white">Your Cart</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (Model.Items.Count == 0)
    {
        <p class="text-white">Your cart is empty.</p>
    }
    else
    {
        <div class="row">
            <!-- Cart Items -->
            <div class="col-lg-8">
                @foreach (var item in Model.Items)
                {
                    <div class="card mb-4 bg-dark text-white">
                        <div class="row g-0 align-items-center p-3">
                            <div class="col-md-6">
                                <h5>@item.Title</h5>
                                <p class="text-muted">@item.Artist</p>
                                <p class="fw-bold">@item.Price.ToString("C")</p>
                            </div>
                            <div class="col-md-4 d-flex align-items-center justify-content-end">
                                <div class="input-group" style="width: 120px;">
                                    <a asp-action="DecreaseQuantity" asp-route-id="@item.CartItemId" class="btn btn-secondary">-</a>
                                    <input type="text" class="form-control text-center bg-dark border-secondary text-white" value="@item.Quantity" readonly>
                                    <a asp-action="IncreaseQuantity" asp-route-id="@item.CartItemId" class="btn btn-secondary">+</a>
                                </div>
                                <div class="ms-3">
                                    <strong>@item.Subtotal.ToString("C")</strong>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 text-end">
                            <a asp-action="Delete" asp-route-id="@item.CartItemId" class="btn btn-sm btn-danger">Delete</a>
                        </div>
                    </div>
                }

                <!-- Coupon Code -->
                <div class="card p-3 bg-dark text-white mb-4">
                    <form method="post" asp-action="ApplyCoupon">
                        <div class="row g-2">
                            <div class="col-md-8">
                                <input type="text" class="form-control bg-dark border-secondary text-white" placeholder="Paste coupon code here" name="CouponCode">
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-light w-100">Apply Coupon</button>
                            </div>
                            <div class="col-md-2">
                                <a href="@Url.Action("UpdateCart", "Cart")" class="btn btn-success w-100">Update Cart</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Cart Totals -->
            <div class="col-lg-4">
                <div class="card p-4 bg-dark text-white">
                    <h4 class="mb-4">Cart totals</h4>
                    <div class="d-flex justify-content-between">
                        <span>Subtotal</span>
                        <span>@Model.TotalAmount.ToString("C")</span>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.CouponCode))
                    {
                        <div class="d-flex justify-content-between">
                            <span>Discount (@Model.CouponCode)</span>
                            <span class="text-success">-@Model.DiscountAmount.ToString("C")</span>
                        </div>
                    }

                    <hr class="border-secondary">

                    <div class="d-flex justify-content-between mb-4">
                        <strong>Grand Total</strong>
                        <strong>@Model.GrandTotal.ToString("C")</strong>
                    </div>

                    <a href="@Url.Action("Index", "Checkout")" class="btn btn-success btn-lg w-100">Proceed to Checkout</a>

                    <div class="mt-3">
                        <a href="@Url.Action("Clear", "Cart")" class="btn btn-danger w-100">Clear Cart</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
