@model MusicStore.Models.UserProfile.UserProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}

<style>
    .hero {
        background: url('/images/background.png') no-repeat center center/cover;
        background-color: #000;
        color: white;
        min-height: 100vh;
        padding: 2rem;
        font-family: 'Poppins', sans-serif;
    }

    .profile-container {
        background: rgba(255, 255, 255, 0.1);
        padding: 2rem;
        border-radius: 10px;
        backdrop-filter: blur(10px);
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
    }

    .card {
        border: none;
        border-radius: 1rem;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
    }

    .card-header {
        background: rgba(0, 255, 159, 0.2);
        color: white;
        font-weight: bold;
        border-top-left-radius: 1rem !important;
        border-top-right-radius: 1rem !important;
        border-bottom: 1px solid rgba(0, 255, 159, 0.3);
    }

    .card-body {
        color: white;
    }

    .btn-primary {
        background: #00ff9f;
        border: none;
        color: black;
        font-weight: bold;
        border-radius: 5px;
        padding: 0.75rem;
        transition: all 0.3s;
    }

        .btn-primary:hover {
            background: #00e68a;
            transform: translateY(-2px);
        }

    .btn-info {
        background: #00c2cb;
        border: none;
        color: white;
        font-weight: bold;
        border-radius: 5px;
        padding: 0.75rem;
        transition: all 0.3s;
    }

        .btn-info:hover {
            background: #00b2bb;
            transform: translateY(-2px);
        }

    .form-control,
    textarea.form-control {
        border-radius: 5px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        background: rgba(255, 255, 255, 0.1);
        color: white;
        padding: 0.75rem;
    }

        .form-control:focus {
            outline: none;
            border-color: #00ff9f;
            background: rgba(255, 255, 255, 0.15);
            color: white;
        }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

    img.rounded-circle {
        border: 4px solid #00ff9f;
    }

    .alert-success {
        background: rgba(40, 167, 69, 0.2);
        border: 1px solid rgba(40, 167, 69, 0.3);
        color: white;
        border-radius: 5px;
    }

    .text-danger {
        color: #ff6b6b;
        font-size: 0.875rem;
    }

    .text-muted {
        color: rgba(255, 255, 255, 0.6) !important;
    }

    .form-label {
        color: white;
    }
</style>

<div class="hero">
    <div class="profile-container">
        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Profile Summary</h5>
                    </div>
                    <div class="card-body text-center">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp"
                             alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">@Model.FullName</h5>
                        <p class="text-muted mb-1">@Model.Email</p>
                        <p class="text-muted mb-4">@Model.Address</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                @if (TempData["StatusMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["StatusMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Edit Profile</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="UpdateProfile" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="UserId" />
                            <input type="hidden" asp-for="UserName" />

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="FirstName" class="form-label"></label>
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="LastName" class="form-label"></label>
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="PhoneNumber" class="form-label"></label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Address" class="form-label"></label>
                                <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" readonly />
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-1"></i> Save Changes
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                @if (Model.HasCustomerProfile && Model.IsAdmin)
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Customer Information</h5>
                        </div>
                        <div class="card-body">
                            <p>You have an active customer profile in our system.</p>
                            <a asp-controller="Customer" asp-action="Details" asp-route-id="@Model.CustomerId"
                               class="btn btn-info">
                                <i class="fas fa-eye me-1"></i> View Customer Details
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}