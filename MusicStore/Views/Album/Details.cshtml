@model MusicStore.Models.AlbumViewModel
@{
    ViewData["Title"] = "Album Details";
}
<h2>Album Details</h2>
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <h6 class="card-subtitle mb-2 text-muted">@Model.Artist</h6>
                <p class="card-text"><strong>Release Date:</strong> @Model.ReleaseDate.ToString("yyyy-MM-dd")</p>
                <p class="card-text"><strong>Genre:</strong> @Model.GenreName</p>
                <p class="card-text"><strong>Price:</strong> @Model.Price.ToString("C")</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.coverUrl))
        {
            <img src="@Model.coverUrl" alt="@Model.Title" class="img-fluid rounded" />
        }
        else
        {
            <div class="text-center p-4 bg-light rounded">
                <span class="text-muted">No cover image available</span>
            </div>
        }
    </div>
</div>
<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>