@model MusicStore.Models.AlbumViewModel
@{
    ViewData["Title"] = "Album Details";
}

<style>
    .hero {
        background: url('/images/background.png') no-repeat center center/cover;
        background-color: #000;
        color: white;
        min-height: 100vh;
        padding: 2rem;
        font-family: 'Poppins', sans-serif;
    }

    .album-container {
        background: rgba(255, 255, 255, 0.1);
        padding: 2rem;
        border-radius: 15px;
        backdrop-filter: blur(10px);
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
    }

    .details-card {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .details-title {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
        color: white;
    }

    .details-subtitle {
        color: rgba(0, 255, 159, 0.8);
        font-size: 1.5rem;
        margin-bottom: 2rem;
    }

    .details-text {
        color: white;
        margin-bottom: 1rem;
        font-size: 1.1rem;
    }

    .details-text strong {
        color: rgba(0, 255, 159, 0.8);
        margin-right: 0.5rem;
    }

    .cover-image {
        width: 100%;
        max-width: 300px;
        border-radius: 15px;
        box-shadow: 0 4px 16px 0 rgba(0, 0, 0, 0.2);
    }

    .no-cover {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        padding: 2rem;
        text-align: center;
        color: rgba(255, 255, 255, 0.7);
    }

    .btn {
        border-radius: 15px;
        padding: 0.75rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
        margin: 0.25rem;
    }

    .btn-primary {
        background: rgba(0, 123, 255, 0.8);
        border: none;
    }

    .btn-primary:hover {
        background: rgba(0, 123, 255, 1);
        transform: translateY(-2px);
    }

    .btn-danger {
        background: rgba(220, 53, 69, 0.8);
        border: none;
    }

    .btn-danger:hover {
        background: rgba(220, 53, 69, 1);
        transform: translateY(-2px);
    }

    .btn-secondary {
        background: rgba(108, 117, 125, 0.8);
        border: none;
    }

    .btn-secondary:hover {
        background: rgba(108, 117, 125, 1);
        transform: translateY(-2px);
    }

    .page-title {
        font-size: 2rem;
        margin-bottom: 2rem;
        color: white;
        text-align: center;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .album-info {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
</style>

<div class="hero">
    <div class="album-container">
        <h2 class="page-title">Album Details</h2>

        <div class="details-card">
            <h3 class="details-title">@Model.Title</h3>
            <h4 class="details-subtitle">@Model.Artist</h4>

            <div class="row">
                <div class="col-md-8">
                    <div class="album-info">
                        <p class="details-text"><strong>Release Date:</strong> @Model.ReleaseDate.ToString("yyyy-MM-dd")
                        </p>
                        <p class="details-text"><strong>Genre:</strong> @Model.GenreName</p>
                        <p class="details-text"><strong>Price:</strong> @Model.Price.ToString("C")</p>
                    </div>

                    <div class="action-buttons">
                        <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display: inline;">
                            <input type="hidden" name="albumId" value="@Model.Id" />
                            <input type="hidden" name="quantity" value="1" />
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-cart-plus"></i> Add to Cart
                            </button>
                        </form>
                        <form asp-controller="Wishlist" asp-action="AddToWishlist" method="post"
                            style="display: inline;">
                            <input type="hidden" name="albumId" value="@Model.Id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-heart"></i> Add to Wishlist
                            </button>
                        </form>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.coverUrl))
                    {
                        <img src="@Model.coverUrl" alt="@Model.Title" class="cover-image" />
                    }
                    else
                    {
                        <div class="no-cover">
                            <span>No cover image available</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>