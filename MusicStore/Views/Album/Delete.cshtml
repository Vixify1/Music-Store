@model MusicStore.Models.AlbumViewModel

@{
    ViewData["Title"] = "Delete Album";
}

<div class="hero">
    <div class="container-glass">
        <div class="delete-warning">
            <i class="bi bi-exclamation-triangle"></i>
            <h4>Delete Album</h4>
        </div>

        <div class="details-card">
            <div class="album-info">
                @if (!string.IsNullOrEmpty(Model.coverUrl))
                {
                    <div class="album-cover">
                        <img src="@Model.coverUrl" alt="@Model.Title" />
                    </div>
                }
                <div class="info-content">
                    <div class="info-item">
                        <span class="label">Title:</span>
                        <span class="value">@Model.Title</span>
                    </div>
                    <div class="info-item">
                        <span class="label">Artist:</span>
                        <span class="value">@Model.Artist</span>
                    </div>
                    <div class="info-item">
                        <span class="label">Genre:</span>
                        <span class="value">@Model.GenreName</span>
                    </div>
                    <div class="info-item">
                        <span class="label">Release Date:</span>
                        <span class="value">@Model.ReleaseDate.ToString("MMMM dd, yyyy")</span>
                    </div>
                    <div class="info-item">
                        <span class="label">Price:</span>
                        <span class="value">@Model.Price.ToString("C")</span>
                    </div>
                </div>
            </div>

            <div class="delete-actions">
                <p class="confirmation-text">Are you sure you want to delete this album?</p>
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    @Html.AntiForgeryToken()

                    <button type="submit" class="btn btn-admin delete">
                        <i class="bi bi-trash"></i> Delete Album
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .delete-warning {
        text-align: center;
        margin-bottom: 2rem;
    }

    .delete-warning i {
        font-size: 2.5rem;
        color: #ff6b6b;
        margin-bottom: 1rem;
    }

    .delete-warning h4 {
        color: white;
        font-size: 1.5rem;
    }

    .album-info {
        display: flex;
        gap: 2rem;
        background: rgba(255, 255, 255, 0.1);
        padding: 1.5rem;
        border-radius: 10px;
        margin-bottom: 2rem;
    }

    .album-cover {
        flex-shrink: 0;
        width: 200px;
        height: 200px;
        border-radius: 10px;
        overflow: hidden;
    }

    .album-cover img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .info-content {
        flex-grow: 1;
    }

    .info-item {
        display: flex;
        margin-bottom: 1rem;
    }

    .info-item:last-child {
        margin-bottom: 0;
    }

    .label {
        color: #00ff9f;
        font-weight: 500;
        width: 120px;
    }

    .value {
        color: white;
    }

    .delete-actions {
        text-align: center;
    }

    .confirmation-text {
        color: white;
        margin-bottom: 1.5rem;
        font-size: 1.1rem;
    }

    .delete-actions .btn {
        margin: 0 0.5rem;
    }
</style>