@model MusicStore.Models.AlbumViewModel
@{
    ViewData["Title"] = "Delete Album";
}
<h2>Delete Album</h2>
<h4>Are you sure you want to delete this album?</h4>

<div class="row mt-4">
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <div class="card-text">
                    <p><strong>Artist:</strong> @Model.Artist</p>
                    <p><strong>Release Date:</strong> @Model.ReleaseDate.ToString("yyyy-MM-dd")</p>
                    <p><strong>Genre:</strong> @Model.GenreName</p>
                    <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.coverUrl))
        {
            <img src="@Model.coverUrl" alt="@Model.Title" class="img-fluid rounded" />
        }
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="alert alert-danger mt-3">
        <i class="bi bi-exclamation-triangle"></i> This action cannot be undone.
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>