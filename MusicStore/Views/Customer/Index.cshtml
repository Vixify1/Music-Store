@model MusicStore.Models.Admin.Customer.CustomerListViewModel

@{
    ViewData["Title"] = "Customer Management";
    // Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Customer Management</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin">Dashboard</a></li>
        <li class="breadcrumb-item active">Customers</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <i class="fas fa-users me-1"></i>
                    Customers List
                </div>
                <div>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i> Add New Customer
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="mb-4">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="FirstNameFilter" class="control-label"></label>
                            <input asp-for="FirstNameFilter" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="LastNameFilter" class="control-label"></label>
                            <input asp-for="LastNameFilter" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search me-1"></i> Search
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-redo me-1"></i> Reset
                            </a>
                        </div>
                    </div>
                </div>
            </form>

            @if (Model.HasFilters)
            {
                <div class="alert alert-info">
                    <i class="fas fa-filter me-1"></i> Showing filtered results. <a asp-action="Index">Clear all filters</a>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-bordered table-striped" id="customersTable">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model.Customers)
                        {
                            <tr>
                                <td>@customer.CustomerId</td>
                                <td>@customer.FullName</td>
                                <td>@customer.Phone</td>
                                <td>@customer.Address</td>
                                <td>@customer.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@customer.CustomerId" class="btn btn-info btn-sm">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@customer.CustomerId" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-3">
                <p>Total customers: @Model.TotalCustomers</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#customersTable').DataTable({
                "paging": true,
                "ordering": true,
                "info": true,
                "searching": false
            });
        });
    </script>
}