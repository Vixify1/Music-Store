@model MusicStore.Models.Admin.Customer.CustomerViewModel

@{
    ViewData["Title"] = "Customer Details";
}

<div class="hero">
    <div class="container-fluid px-4">
        <h1 class="page-title">Customer Details</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/Admin">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Customers</a></li>
            <li class="breadcrumb-item active">Details</li>
        </ol>

        <div class="row g-4">
            <div class="col-xl-6">
                <div class="glass-card">
                    <div class="card-header">
                        <i class="bi bi-person me-1"></i> Customer Information
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CustomerId)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.CustomerId)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.UserId)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.UserId)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FullName)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.FullName)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Phone)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Address)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.UpdatedAt)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.UpdatedAt)</dd>
                        </dl>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-primary">
                            <i class="bi bi-pencil me-1"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-xl-6">
                <div class="glass-card">
                    <div class="card-header">
                        <i class="bi bi-cart me-1"></i> Order History
                    </div>
                    <div class="card-body">
                        @if (Model.Orders != null && Model.Orders.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover table-borderless align-middle text-white">
                                    <thead class="table-header">
                                        <tr>
                                            <th>Order ID</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                            <th>Total</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var order in Model.Orders)
                                        {
                                            <tr>
                                                <td>@order.OrderId</td>
                                                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                                                <td>@order.Status</td>
                                                <td>@order.TotalAmount.ToString("C")</td>
                                                <td>
                                                    <a href="/Order/Details/@order.OrderId" class="btn btn-info btn-sm">
                                                        <i class="bi bi-info-circle"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                This customer has no orders yet.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero {
        background: url('/images/background.png') no-repeat center center/cover;
        background-color: #000;
        min-height: 100vh;
        padding: 2rem;
        color: white;
    }

    .page-title {
        color: #00ff9f;
        margin-bottom: 2rem;
        font-weight: bold;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(12px);
        border-radius: 15px;
        padding: 1.5rem;
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        min-height: 400px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
    }

    .card-header {
        font-weight: bold;
        font-size: 1.2rem;
        margin-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding-bottom: 0.5rem;
    }

    .btn-primary {
        background: #00ff9f;
        border: none;
        color: black;
        padding: 0.5rem 1.5rem;
        border-radius: 5px;
        font-weight: bold;
        transition: all 0.3s;
    }

    .btn-primary:hover {
        background: #00e68a;
        transform: translateY(-2px);
    }

    .btn-secondary {
        background: rgba(255, 255, 255, 0.2);
        border: none;
        color: white;
        padding: 0.5rem 1.5rem;
        border-radius: 5px;
        font-weight: bold;
        transition: all 0.3s;
    }

    .btn-secondary:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: translateY(-2px);
    }

    .btn-info {
        background: #00c2cb;
        border: none;
        color: black;
        padding: 0.4rem 0.8rem;
        border-radius: 5px;
        transition: all 0.3s;
    }

    .btn-info:hover {
        background: #00b2bb;
        transform: translateY(-2px);
    }

    .table-header {
        background: rgba(0, 0, 0, 0.3);
    }

    .table thead th {
        color: #00ff9f;
        font-weight: bold;
    }

    .table tbody tr:hover {
        background: rgba(255, 255, 255, 0.05);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
