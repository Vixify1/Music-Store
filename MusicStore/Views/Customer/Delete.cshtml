@model MusicStore.Models.Admin.Customer.CustomerViewModel

@{
    ViewData["Title"] = "Delete Customer";
    // Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Delete Customer</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Customers</a></li>
        <li class="breadcrumb-item active">Delete</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-exclamation-triangle me-1"></i>
            Warning: Confirm Customer Deletion
        </div>
        <div class="card-body">
            <h5>Are you sure you want to delete this customer?</h5>

            <div class="row mt-4">
                <div class="col-md-6">
                    <h6 class="border-bottom pb-2">Customer Information</h6>
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CustomerId)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CustomerId)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FullName)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FullName)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Phone)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>
                    </dl>
                </div>
            </div>

            @if (Model.Orders != null && Model.Orders.Any())
            {
                <div class="alert alert-warning mt-3">
                    <i class="fas fa-exclamation-circle me-1"></i>
                    <strong>Warning!</strong> This customer has @Model.Orders.Count() active order(s). Deleting this
                    customer will affect these orders.
                </div>

                <div class="table-responsive mt-3">
                    <h6>Associated Orders:</h6>
                    <table class="table table-bordered table-sm">
                        <thead class="table-dark">
                            <tr>
                                <th>Order ID</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Orders)
                            {
                                <tr>
                                    <td>@order.OrderId</td>
                                    <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                                    <td>@order.Status</td>
                                    <td>@order.TotalAmount.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="CustomerId" />
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <button type="submit" class="btn btn-danger"
                        onclick="return confirm('Are you absolutely sure you want to delete this customer?');">
                        <i class="fas fa-trash me-1"></i> Delete Customer
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>