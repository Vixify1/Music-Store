@model MusicStore.Models.Admin.Customer.CustomerViewModel

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="hero">
    <div class="container-glass">
        <div class="delete-warning">
            <i class="bi bi-exclamation-triangle"></i>
            <h4>Delete Customer</h4>
        </div>

        <div class="details-card">
            <div class="customer-info">
                <div class="info-item">
                    <span class="label">Name:</span>
                    <span class="value">@Model.FullName</span>
                </div>
                <div class="info-item">
                    <span class="label">Phone:</span>
                    <span class="value">@Model.Phone</span>
                </div>
                <div class="info-item">
                    <span class="label">Member Since:</span>
                    <span class="value">@Model.CreatedAt.ToString("MMMM dd, yyyy")</span>
                </div>
            </div>

            @if (Model.Orders != null && Model.Orders.Any())
            {
                <div class="orders-warning">
                    <i class="bi bi-exclamation-circle"></i>
                    <p>This customer has @Model.Orders.Count() active order(s). Deleting will affect these orders.</p>
                </div>
            }

            <div class="delete-actions">
                <p class="confirmation-text">Are you sure you want to delete this customer?</p>
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="CustomerId" />
                    @Html.AntiForgeryToken()

                    <button type="submit" class="btn btn-admin delete">
                        <i class="bi bi-trash"></i> Delete Customer
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .delete-warning {
        text-align: center;
        margin-bottom: 2rem;
    }

    .delete-warning i {
        font-size: 2.5rem;
        color: #ff6b6b;
        margin-bottom: 1rem;
    }

    .delete-warning h4 {
        color: white;
        font-size: 1.5rem;
    }

    .customer-info {
        background: rgba(255, 255, 255, 0.1);
        padding: 1.5rem;
        border-radius: 10px;
        margin-bottom: 2rem;
    }

    .info-item {
        display: flex;
        margin-bottom: 1rem;
    }

    .info-item:last-child {
        margin-bottom: 0;
    }

    .label {
        color: #00ff9f;
        font-weight: 500;
        width: 120px;
    }

    .value {
        color: white;
    }

    .orders-warning {
        background: rgba(255, 193, 7, 0.1);
        border: 1px solid rgba(255, 193, 7, 0.2);
        padding: 1rem;
        border-radius: 10px;
        margin-bottom: 2rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .orders-warning i {
        color: #ffc107;
        font-size: 1.5rem;
    }

    .orders-warning p {
        color: white;
        margin: 0;
    }

    .delete-actions {
        text-align: center;
    }

    .confirmation-text {
        color: white;
        margin-bottom: 1.5rem;
        font-size: 1.1rem;
    }

    .delete-actions .btn {
        margin: 0 0.5rem;
    }
</style>