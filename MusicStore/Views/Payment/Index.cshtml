@model IEnumerable<MusicStore.Model.Entities.Payment>

@{
    ViewData["Title"] = "Payment History";
}

<div class="container mt-4">
    <h1>Payment History</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Order #</th>
                    <th>Date</th>
                    <th>Amount</th>
                    <th>Method</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.OrderId</td>
                        <td>@item.PaymentDate.ToString("dd MMM yyyy HH:mm")</td>
                        <td>$@item.Order?.TotalAmount.ToString("F2")</td>
                        <td>@item.PaymentMethod</td>
                        <td>
                            <span>@item.PaymentStatus
                            </span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.PaymentId" class="btn btn-sm btn-info">Details</a>
                            <a asp-action="Cancel" asp-route-id="@item.PaymentId" class="btn btn-danger"> Cancel Payment</a>

                        </td>

                       
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
