@model IEnumerable<MusicStore.Models.Payment.PaymentUpdateStatusViewModel>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    .hero {
        background: url('/images/background.png') no-repeat center center/cover;
        background-color: #000;
        color: white;
        min-height: 100vh;
        padding: 2rem;
        font-family: 'Poppins', sans-serif;
    }

    .payment-container {
        background: rgba(255, 255, 255, 0.1);
        padding: 2rem;
        border-radius: 15px;
        backdrop-filter: blur(10px);
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
    }

    .card {
        border: none;
        border-radius: 15px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
        box-shadow: 0 4px 16px 0 rgba(0, 0, 0, 0.2);
        margin-bottom: 2rem;
    }

    .card-header {
        background: rgba(0, 255, 159, 0.2);
        color: white;
        font-weight: bold;
        border-top-left-radius: 15px !important;
        border-top-right-radius: 15px !important;
        border-bottom: 1px solid rgba(0, 255, 159, 0.3);
        padding: 1.5rem;
    }

    .card-body {
        padding: 2rem;
        color: white;
    }

    .form-control {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(0, 255, 159, 0.3);
        color: white;
        border-radius: 8px;
        padding: 0.8rem 1rem;
    }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.15);
            box-shadow: 0 0 0 0.2rem rgba(0, 255, 159, 0.25);
            border-color: rgba(0, 255, 159, 0.5);
            color: white;
        }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }

    .form-label {
        color: #00ff9f;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .form-select, select.form-control {
        background-color: rgba(255, 255, 255, 0.1);
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%2300ff9f' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
        color: white;
        border: 1px solid rgba(0, 255, 159, 0.3);
    }

    .form-check-input {
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(0, 255, 159, 0.3);
    }

        .form-check-input:checked {
            background-color: #00ff9f;
            border-color: #00ff9f;
        }

    .form-check-label {
        color: rgba(255, 255, 255, 0.9);
    }

    .btn-primary {
        background: #00ff9f;
        border: none;
        color: #000;
        font-weight: 600;
        border-radius: 8px;
        padding: 0.8rem 1.5rem;
        transition: all 0.3s;
        box-shadow: 0 2px 8px rgba(0, 255, 159, 0.3);
    }

        .btn-primary:hover {
            background: #00e68f;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 255, 159, 0.4);
            color: #000;
        }

    .btn-outline-secondary {
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
        font-weight: 600;
        border-radius: 8px;
        padding: 0.8rem 1.5rem;
        transition: all 0.3s;
        background: transparent;
    }

        .btn-outline-secondary:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.5);
            color: white;
            transform: translateY(-2px);
        }

    .list-group-item {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(0, 255, 159, 0.2);
        color: white;
        margin-bottom: 0.5rem;
        border-radius: 8px !important;
    }

        .list-group-item:last-child {
            margin-bottom: 0;
        }

    .alert-danger {
        background: rgba(220, 53, 69, 0.2);
        border: 1px solid rgba(220, 53, 69, 0.3);
        color: #ff6b81;
        border-radius: 8px;
        padding: 1.5rem;
    }

    .alert-info {
        background: rgba(23, 162, 184, 0.2);
        border: 1px solid rgba(23, 162, 184, 0.3);
        color: #17a2b8;
        border-radius: 8px;
        padding: 1.5rem;
    }

    strong {
        color: #00ff9f;
    }

    h1, h4, h5 {
        color: white;
        font-weight: 600;
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        text-align: center;
    }
</style>

<div class="hero">
    <div class="payment-container">
        <h1>Admin Dashboard</h1>

        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Orders</h4>
            </div>
            <div class="card-body">
                <table class="table table-hover text-white">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>User</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.OrderId</td>
                                <td>@order.CustomerName</td>
                                <td>@order.TotalAmount.ToString("C")</td>
                                <td>@order.PaymentStatus</td>

                                <td>
                                    <a asp-action="UpdateStatus" asp-route-id="@order.OrderId" class="btn btn-primary btn-sm">
                                        <i class="fas fa-edit me-1"></i> Update Status
                                    </a>
                                    <a asp-action="AdminPaymentDetails" asp-route-id="@order.OrderId" class="btn btn-outline-secondary btn-sm">
                                        <i class="fas fa-eye me-1"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
