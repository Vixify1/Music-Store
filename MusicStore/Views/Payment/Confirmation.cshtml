@model MusicStore.Model.Entities.Payment

@{
    ViewData["Title"] = "Payment Confirmation";
}

<style>
    .hero {
        background: url('/images/background.png') no-repeat center center/cover;
        background-color: #000;
        color: white;
        min-height: 100vh;
        padding: 2rem;
        font-family: 'Poppins', sans-serif;
    }

    .confirmation-container {
        background: rgba(255, 255, 255, 0.1);
        padding: 2rem;
        border-radius: 15px;
        backdrop-filter: blur(10px);
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
    }

    .card {
        border: none;
        border-radius: 15px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
        box-shadow: 0 4px 16px 0 rgba(0, 0, 0, 0.2);
        margin-bottom: 2rem;
    }

    .card-header {
        background: rgba(0, 255, 159, 0.2);
        color: white;
        font-weight: bold;
        border-top-left-radius: 15px !important;
        border-top-right-radius: 15px !important;
        border-bottom: 1px solid rgba(0, 255, 159, 0.3);
        padding: 1.5rem;
    }

    .card-body {
        padding: 2rem;
        color: white;
        text-align: center;
    }

    .card-footer {
        padding: 1rem;
        background: rgba(0, 255, 159, 0.2);
        color: white;
        border-bottom-left-radius: 15px;
        border-bottom-right-radius: 15px;
    }

    .btn-primary {
        background: #00ff9f;
        border: none;
        color: #000;
        font-weight: 600;
        border-radius: 8px;
        padding: 0.8rem 1.5rem;
        transition: all 0.3s;
        box-shadow: 0 2px 8px rgba(0, 255, 159, 0.3);
    }

        .btn-primary:hover {
            background: #00e68f;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 255, 159, 0.4);
            color: #000;
        }

    .btn-secondary {
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
        font-weight: 600;
        border-radius: 8px;
        padding: 0.8rem 1.5rem;
        transition: all 0.3s;
    }

        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.5);
            color: white;
            transform: translateY(-2px);
        }

    h1, h4, h5 {
        color: white;
        font-weight: 600;
    }

    i.bi-check-circle-fill {
        color: #00ff9f;
    }

    p {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.9);
    }
</style>

<div class="hero">
    <div class="confirmation-container">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h2>Payment Successful!</h2>
            </div>
            <div class="card-body">
                <i class="bi bi-check-circle-fill" style="font-size: 4rem;"></i>
                <h4 class="mt-3">Thank you for your payment</h4>
                <p>Your payment for Order #@Model.OrderId has been processed successfully.</p>

                <div class="row justify-content-center mt-4">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Transaction ID:</dt>
                            <dd class="col-sm-7">@Model.TransactionId</dd>

                            <dt class="col-sm-5">Payment Date:</dt>
                            <dd class="col-sm-7">@Model.PaymentDate.ToString("dd MMM yyyy HH:mm")</dd>

                            <dt class="col-sm-5">Payment Method:</dt>
                            <dd class="col-sm-7">@Model.PaymentMethod</dd>

                            <dt class="col-sm-5">Amount:</dt>
                            <dd class="col-sm-7">$@Model.Order.TotalAmount.ToString("F2")</dd>
                        </dl>
                    </div>
                </div>

                <p>A confirmation email with payment details has been sent to your registered email address.</p>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center gap-3">
                    <a asp-controller="Order" asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-primary">View Order</a>
                    <a asp-controller="Album" asp-action="Index" class="btn btn-secondary">Continue Shopping</a> <!--This can be also home not the album/index-->
                </div>
            </div>
        </div>
    </div>
</div>
