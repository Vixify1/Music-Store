@model MusicStore.Models.Payment.PaymentUpdateStatusViewModel
@{
    ViewData["Title"] = "Update Payment Status";
}

<style>
    .hero {
        background: url('/images/background.png') no-repeat center center/cover;
        background-color: #000;
        color: white;
        min-height: 100vh;
        padding: 2rem;
        font-family: 'Poppins', sans-serif;
    }

    .payment-container {
        background: rgba(255, 255, 255, 0.1);
        padding: 2rem;
        border-radius: 15px;
        backdrop-filter: blur(10px);
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
    }

    .card {
        border: none;
        border-radius: 15px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
        box-shadow: 0 4px 16px 0 rgba(0, 0, 0, 0.2);
        margin-bottom: 2rem;
    }

    .card-header {
        background: rgba(0, 255, 159, 0.2);
        color: white;
        font-weight: bold;
        border-top-left-radius: 15px !important;
        border-top-right-radius: 15px !important;
        border-bottom: 1px solid rgba(0, 255, 159, 0.3);
        padding: 1.5rem;
    }

    .card-body {
        padding: 2rem;
        color: white;
    }

    .card-title {
        color: #00ff9f;
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .form-control {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(0, 255, 159, 0.3);
        color: white;
        border-radius: 8px;
        padding: 0.8rem 1rem;
    }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.15);
            box-shadow: 0 0 0 0.2rem rgba(0, 255, 159, 0.25);
            border-color: rgba(0, 255, 159, 0.5);
            color: white;
        }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }

    .form-label, label {
        color: #00ff9f;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .form-select, select.form-control {
        background-color: rgba(255, 255, 255, 0.1);
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%2300ff9f' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
        color: white;
        border: 1px solid rgba(0, 255, 159, 0.3);
    }

    .btn-primary {
        background: #00ff9f;
        border: none;
        color: #000;
        font-weight: 600;
        border-radius: 8px;
        padding: 0.8rem 1.5rem;
        transition: all 0.3s;
        box-shadow: 0 2px 8px rgba(0, 255, 159, 0.3);
    }

        .btn-primary:hover {
            background: #00e68f;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 255, 159, 0.4);
            color: #000;
        }

    .btn-secondary {
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
        font-weight: 600;
        border-radius: 8px;
        padding: 0.8rem 1.5rem;
        transition: all 0.3s;
        background: transparent;
    }

        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.5);
            color: white;
            transform: translateY(-2px);
        }

    .btn-info {
        background: rgba(23, 162, 184, 0.2);
        border: 1px solid rgba(23, 162, 184, 0.3);
        color: #17a2b8;
        font-weight: 600;
        border-radius: 8px;
        padding: 0.8rem 1.5rem;
        transition: all 0.3s;
    }

        .btn-info:hover {
            background: rgba(23, 162, 184, 0.3);
            border-color: rgba(23, 162, 184, 0.5);
            color: white;
            transform: translateY(-2px);
        }

    h2 {
        color: white;
        font-weight: 600;
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }
</style>

<div class="hero">
    <div class="payment-container">
        <h2>Update Payment Status</h2>
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Modify Payment Status</h4>
            </div>
            <div class="card-body">
                <form asp-action="UpdateStatus" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.PaymentId" />

                    <div class="form-group">
                        <label for="status">Select New Status:</label>
                        <select name="status" class="form-control" required>
                            <option value="Pending" selected="@(ViewBag.SelectedStatus == "Pending")">Pending</option>
                            <option value="Completed" selected="@(ViewBag.SelectedStatus == "Completed")">Completed</option>
                            <option value="Cancelled" selected="@(ViewBag.SelectedStatus == "Cancelled")">Cancelled</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-controller="Payment" asp-action="AdminPaymentDetails" asp-route-id="@Model.OrderId" class="btn btn-info">
                                <i class="fas fa-eye me-1"></i> View Payment Details
                            </a>
                            <div>
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fas fa-save me-1"></i> Update Status
                                </button>
                                <a asp-action="Admin" class="btn btn-secondary">
                                    <i class="fas fa-times me-1"></i> Cancel
                                </a>

                             
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>