@model MusicStore.Models.Payment.PaymentCancelViewModel

@{
    ViewData["Title"] = "Cancel Payment";
}

<div class="container mt-4">
    <div class="card text-center">
        <div class="card-header bg-warning text-dark">
            <h2><i class="bi bi-exclamation-triangle-fill"></i> Cancel Payment</h2>
        </div>
        <div class="card-body">
            <i class="bi bi-x-circle-fill text-danger" style="font-size: 4rem;"></i>
            <h4 class="mt-3">Are you sure you want to cancel this payment?</h4>
            <p class="text-muted">This action cannot be undone once confirmed.</p>

            <div class="row justify-content-center mt-4">
                <div class="col-md-6">
                    <dl class="row text-start">
                        <dt class="col-sm-5">Order ID:</dt>
                        <dd class="col-sm-7">@Model.OrderId</dd>

                        <dt class="col-sm-5">Payment ID:</dt>
                        <dd class="col-sm-7">@Model.PaymentId</dd>

                        <dt class="col-sm-5">Current Status:</dt>
                        <dd class="col-sm-7">@Model.PaymentStatus</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="CancelConfirmed" method="post" class="mt-4">
                <input type="hidden" name="id" value="@Model.PaymentId" />
                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-x-circle"></i> Confirm Cancellation
                    </button>
                    <a asp-controller="Order" asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Go Back
                    </a>
                </div>
            </form>
        </div>
        <div class="card-footer text-muted">
            Need help? <a href="/Contact">Contact support</a>.
        </div>
    </div>
</div>
