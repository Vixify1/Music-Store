@model MusicStore.Models.Authentication.LoginViewModel

<div class="hero">
    <div class="login-container auth-form">
        <h2>Welcome Back</h2>
        <form asp-action="Login" method="post" class="login-form">
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Login</button>
            </div>
            <div class="form-group text-center">
                <a asp-action="ForgotPassword">Forgot your password?</a>
            </div>
        </form>
        <div class="register-link">
            <p>Don't have an account? <a asp-action="Register">Register here</a></p>
        </div>
    </div>
</div>

<style>
    .hero {
        background: url('/images/background.png') no-repeat center center/cover;
        background-color: #000;
        color: white;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
    }

    .login-container {
        background: rgba(255, 255, 255, 0.1);
        padding: 2rem;
        border-radius: 10px;
        width: 100%;
        max-width: 400px;
        backdrop-filter: blur(10px);
    }

    .auth-form .form-control {
        color: white;
    }

    .auth-form .form-control::placeholder {
        color: rgba(255, 255, 255, 0.7);
    }

    .login-form {
        margin-top: 1.5rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    label {
        display: block;
        margin-bottom: 0.5rem;
        color: white;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 5px;
        background: rgba(255, 255, 255, 0.1);
    }

    .form-control:focus {
        outline: none;
        border-color: #00ff9f;
        background: rgba(255, 255, 255, 0.15);
    }

    .btn-primary {
        background: #00ff9f;
        border: none;
        color: black;
        padding: 0.75rem;
        border-radius: 5px;
        width: 100%;
        font-weight: bold;
        transition: all 0.3s;
    }

    .btn-primary:hover {
        background: #00e68a;
        transform: translateY(-2px);
    }

    .checkbox {
        display: flex;
        align-items: center;
    }

    .checkbox input {
        margin-right: 0.5rem;
    }

    .text-danger {
        color: #ff6b6b;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    .register-link {
        margin-top: 1.5rem;
        text-align: center;
    }

    .register-link a {
        color: #00ff9f;
        text-decoration: none;
    }

    .register-link a:hover {
        text-decoration: underline;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}