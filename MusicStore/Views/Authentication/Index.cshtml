@using Microsoft.AspNetCore.Identity
@using MusicStore.Model.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Authentication";
}

<h2>Authentication</h2>

@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    <p>Welcome, @user.Email!</p>
    <a class="btn btn-danger" asp-controller="Authentication" asp-action="Logout">Logout</a>
}
else
{
    <p>You are not logged in.</p>
    <a class="btn btn-primary" asp-controller="Authentication" asp-action="Login">Login</a>
    <a class="btn btn-success" asp-controller="Authentication" asp-action="Register">Register</a>
}
