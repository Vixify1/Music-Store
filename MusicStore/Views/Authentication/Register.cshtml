@model MusicStore.Models.Authentication.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="hero">
    <div class="register-container auth-form">
        <h2>Create Account</h2>
        <form asp-action="Register" method="post" class="register-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" placeholder="Enter your last name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone">Phone</label>
                <input asp-for="Phone" class="form-control" placeholder="Enter your phone number" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control"
                    placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserType">Confirm Password</label>
                <select asp-for="UserType" asp-items="Html.GetEnumSelectList<MusicStore.Model.Enums.UserTypeOptions>()" class="form-control"></select>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Register</button>
            </div>
        </form>
        <div class="login-link">
            <p>Already have an account? <a asp-action="Login">Login here</a></p>
        </div>
    </div>
</div>

<style>
    .hero {
        background: url('/images/background.png') no-repeat center center/cover;
        background-color: #000;
        color: white;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
    }

    .register-container {
        background: rgba(255, 255, 255, 0.1);
        padding: 2rem;
        border-radius: 10px;
        width: 100%;
        max-width: 500px;
        backdrop-filter: blur(10px);
    }

    .auth-form .form-control {
        color: white;
    }

    .auth-form .form-control::placeholder {
        color: rgba(255, 255, 255, 0.7);
    }

    .register-form {
        margin-top: 1.5rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    label {
        display: block;
        margin-bottom: 0.5rem;
        color: white;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 5px;
        background: rgba(255, 255, 255, 0.1);
    }

    .form-control:focus {
        outline: none;
        border-color: #00ff9f;
        background: rgba(255, 255, 255, 0.15);
    }

    .btn-primary {
        background: #00ff9f;
        border: none;
        color: black;
        padding: 0.75rem;
        border-radius: 5px;
        width: 100%;
        font-weight: bold;
        transition: all 0.3s;
    }

    .btn-primary:hover {
        background: #00e68a;
        transform: translateY(-2px);
    }

    .text-danger {
        color: #ff6b6b;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    .login-link {
        margin-top: 1.5rem;
        text-align: center;
    }

    .login-link a {
        color: #00ff9f;
        text-decoration: none;
    }

    .login-link a:hover {
        text-decoration: underline;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}