@model MusicStore.Models.Admin.Genre.GenreViewModel

@{
    ViewData["Title"] = "Edit Genre";
}

<div class="hero">
    <div class="container-glass">
        <h2 class="page-title">Edit Genre</h2>

        <form asp-action="Edit" method="post" class="form-container">
            <input type="hidden" asp-for="GenreId" />

            <div class="form-group">
                <label asp-for="Name" class="form-label">Genre Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter genre name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" placeholder="Enter genre description" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}