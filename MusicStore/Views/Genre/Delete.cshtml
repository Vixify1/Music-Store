@model MusicStore.Models.Admin.Genre.GenreViewModel

@{
    ViewData["Title"] = "Delete Genre";
}

<div class="hero">
    <div class="container-glass">
        <div class="delete-warning">
            <i class="bi bi-exclamation-triangle"></i>
            <h4>Delete Genre</h4>
        </div>

        <div class="details-card">
            <div class="genre-info">
                <div class="info-item">
                    <span class="label">Name:</span>
                    <span class="value">@Model.Name</span>
                </div>
                <div class="info-item">
                    <span class="label">Description:</span>
                    <span class="value">@Model.Description</span>
                </div>
            </div>

            <div class="delete-actions">
                <p class="confirmation-text">Are you sure you want to delete this genre?</p>
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="GenreId" />
                    @Html.AntiForgeryToken()

                    <button type="submit" class="btn btn-admin delete">
                        <i class="bi bi-trash"></i> Delete Genre
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .delete-warning {
        text-align: center;
        margin-bottom: 2rem;
    }

    .delete-warning i {
        font-size: 2.5rem;
        color: #ff6b6b;
        margin-bottom: 1rem;
    }

    .delete-warning h4 {
        color: white;
        font-size: 1.5rem;
    }

    .genre-info {
        background: rgba(255, 255, 255, 0.1);
        padding: 1.5rem;
        border-radius: 10px;
        margin-bottom: 2rem;
    }

    .info-item {
        display: flex;
        margin-bottom: 1rem;
    }

    .info-item:last-child {
        margin-bottom: 0;
    }

    .label {
        color: #00ff9f;
        font-weight: 500;
        width: 120px;
    }

    .value {
        color: white;
    }

    .delete-actions {
        text-align: center;
    }

    .confirmation-text {
        color: white;
        margin-bottom: 1.5rem;
        font-size: 1.1rem;
    }

    .delete-actions .btn {
        margin: 0 0.5rem;
    }
</style>
